<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/ic_menu" />

    <TextView
        android:id="@+id/textview_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="8dp"
        android:textSize="24sp"
        tools:text="Effortlessly view and manage your Finances in one place"
        android:textColor="@color/black" />
    <ImageView
        android:src="@drawable/bg"
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/textview_main"
        android:layout_height="wrap_content" />
    <Button
        android:layout_margin="48dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:onClick="connectAggregator"
        android:text="Connect Your\nAccount Aggregator"
        android:background="@drawable/round_blue_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>